<div class="container mt-5">
  <%= link_to '🔙', tasks_path, class: "text-decoration-none h5 btn btn-light" %>
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <%= link_to '✍️', edit_task_path, class: "text-decoration-none heading-6 btn btn-light" %>
  <%= link_to '❌', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" }, class:
  "text-decoration-none btn btn-light" %>
</div>
