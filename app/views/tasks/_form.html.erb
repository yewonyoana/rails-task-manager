 <%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title,  class: 'form-control'%>
  <%= f.label :details %>
  <%= f.text_area :details, class: 'form-control' %>
  <% if @task.id != nil %>
    <p class="mt-3">Completed? <%= f.check_box :completed, class: 'form-check-input' %></p>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
